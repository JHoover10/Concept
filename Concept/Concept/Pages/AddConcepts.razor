@page "/addconcepts"

<MudTabs Elevation="2" Centered="true" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel Text="Easy">
        <MudItem xs="12" sm="12" md="12">
            <MudTextField T="string" Variant="Variant.Outlined" @bind-Value="@_easyConcepts" Lines="20" />
        </MudItem>
    </MudTabPanel>
    <MudTabPanel Text="Medium">
        <MudItem xs="12" sm="12" md="12">
            <MudTextField T="string" Variant="Variant.Outlined" @bind-Value="@_mediumConcepts" Lines="20" />
        </MudItem>
    </MudTabPanel>
    <MudTabPanel Text="Hard">
        <MudItem xs="12" sm="12" md="12">
            <MudTextField T="string" Variant="Variant.Outlined" @bind-Value="@_hardConcepts" Lines="20" />
        </MudItem>
    </MudTabPanel>
</MudTabs>
<MudButton OnClick="@SaveText">Save</MudButton>

@code {
    private int _activeIndex = 0;
    private string _easyConcepts = string.Empty;
    private string _mediumConcepts = string.Empty;
    private string _hardConcepts = string.Empty;

    private void SaveText()
    {
        
    }
}
